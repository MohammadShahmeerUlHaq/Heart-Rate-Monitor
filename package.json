{
  "name": "heart-rate-monitor",
  "version": "1.0.0",
  "description": "Cross-platform heart rate monitoring application for group fitness",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:all": "npm run build && npm run build:electron",
    "postinstall": "cd electron && npm install && (npm run rebuild || true)",
    "dist": "npm run build:all && electron-builder",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "electron:build": "npm run build && electron-builder",
    "build:electron": "node scripts/build-electron.js"
  },
  "keywords": [
    "electron",
    "heart-rate",
    "fitness",
    "ant+",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "ant-plus": "^0.1.24",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.0",
    "chartjs-node-canvas": "^5.0.0",
    "lucide-react": "^0.344.0",
    "node-gyp-build": "^4.6.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "usb": "^2.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^7.0.0"
  },
  "build": {
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/node_modules/ant-plus",
        "to": "node_modules/ant-plus"
      },
      {
        "from": "electron/node_modules/usb",
        "to": "node_modules/usb"
      },
      {
        "from": "electron/node_modules/node-gyp-build",
        "to": "node_modules/node-gyp-build"
      }
    ],
    "directories": {
      "output": "release"
    }
  }
}
